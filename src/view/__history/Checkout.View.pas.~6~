    P_LOGIN: TPanel;
    EDT_USUARIO: TEdit;
    EDT_PASSWORD: TEdit;
    IMG_LOGIN: TImage;
    SB_LOGIN: TSpeedButton;
    procedure SB_LOGINClick(Sender: TObject);
  private
    { Private declarations }
    procedure Login;
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

{ TForm1 }

procedure TForm1.Login;
begin
//
end;

procedure TForm1.SB_LOGINClick(Sender: TObject);
begin
if EDT_USUARIO.Text or EDT_PASSWORD <> '' then
MessageBox('Usuário e/ou senha inválidos');
end;

end.
